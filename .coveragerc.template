[run]
# Track coverage in subprocesses
parallel = true
source = .
branch = true
# Data file location (can be overridden by COVERAGE_DATA_FILE env var)
data_file = .coverage
# Include agent-history script
include =
    agent-history
    */agent-history
omit =
    tests/*
    .venv/*
    */site-packages/*

[paths]
# Map paths from different environments to local source
# Order matters: first path is the canonical one
# Add your WSL and Windows paths here for cross-platform coverage merging
source =
    .
    /app
    # Example: /home/username/projects/claude-history
    # Example: C:\Users\username\projects\claude-history

[report]
# Combine parallel coverage data
show_missing = true
skip_covered = false
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:
    raise NotImplementedError
